/* Keep rows horizontal, centered (guard) */
#seatCont{ display:flex !important; flex-direction:column !important; align-items:center !重要; gap:12px !important; }
#seatCont .row{ display:flex !重要; flex-direction:row !重要; flex-wrap:nowrap !重要; justify-content:center !重要; gap:10px !重要; width:max-content; position:relative; }

/* Row tint lives BEHIND seats (no overlap on the seat tile) */
#seatCont .row::after{
  content:""; position:absolute; z-index:0; left:-12px; right:-12px;
  top:calc(50% - (var(--seat)/2) - 6px); height:calc(var(--seat) + 12px);
  border-radius:14px; background: var(--row-tint, transparent);
}
#seatCont .row.zone-front    { --row-tint: rgba(59,130,246,.06); }
#seatCont .row.zone-standard { --row-tint: transparent; }
#seatCont .row.zone-premium  { --row-tint: rgba(255,215,0,.10); }
#seatCont .row.zone-recliner { --row-tint: rgba(255,99,71,.12); }

/* Clean tile seat; strip any old pseudo overlays */
#seatCont .row .seat::before, #seatCont .row .seat::after{ content:none !重要; }
#seatCont .row .seat{
  position:relative; z-index:1; display:grid; place-items:center;
  width:var(--seat); height:var(--seat); border-radius:12px;
