* {
  padding: 0%;
  margin: 0%;
  box-sizing: border-box;
  font-family: sans-serif;
}

:root {
  --stage-max: 760px;
}

.leftCont {
  width: 100%;
  background-color: aliceblue;
}

.leftMainCont {
  width: 100%;
}

body {
  background-color: #f1f1f1;
  font-size: 18px;
  line-height: 1.5;
}

.container .legendContainer {
  background-color: #f1f1f1;
  display: flex;
  padding: 1rem;
  width: 100%;
}

.container .legendContainer ul {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  list-style: none;
  max-width: 600px;
  margin: 0 auto;
  user-select: none;
}

.container .legendContainer ul li {
  display: flex;
  align-items: center;
  justify-content: center;
}

.container .legendContainer ul li small {
  color: #bdbdbd;
  font-size: 14px;
  letter-spacing: 1px;
  margin-bottom: 4px;
}

.container .leftMainCont .seat {
  height: 36px;
  width: 42px;
  border: 1px solid #bdbdbd;
  border-radius: 3px 3px 6px 6px;
  margin: 12px;
  margin-bottom: 0.9rem;
  position: relative;
  cursor: pointer;
  background-color: #fff;
  transition: 0.3s ease background-color;
}

/* Seat label displayed on each seat */
.container .leftMainCont .seat::before {
  content: attr(data-label);
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 12px;
  color: #333;
  z-index: 1;
  pointer-events: none;
  font-weight: 600;
}

.container .leftMainCont .seat::after {
  content: "";
  height: 30px;
  width: 28px;
  border: 1px solid #bdbdbd;
  position: absolute;
  left: 50%;
  top: 29%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  border-radius: 3px 3px;
  transition: 0.3s ease background-color;
  z-index: 0;
}

.container .leftMainCont .seat:hover,
.container .leftMainCont .seat:hover::after {
  background-color: #e6e6e6;
}

.container .leftMainCont .seat {
  transition: transform 0.12s ease, background-color 0.3s ease;
}

.container .leftMainCont .seat.selected {
  transform: scale(1.04);
}

.container .legendContainer .seat {
  cursor: default;
  margin-bottom: 10px;
}

.container .legendContainer .seat:hover,
.container .legendContainer .seat:hover::after {
  background-color: #fff;
}

.container .leftMainCont .seat.occupied,
.container .leftMainCont .seat.occupied::after {
  background-color: lightgray;
}

.container .leftMainCont .seat.occupied {
  cursor: not-allowed;
}

.container .leftMainCont .seat:focus-visible {
  outline: 2px solid #5bd65b;
  outline-offset: 2px;
}

.container .leftMainCont .seat.selected,
.container .leftMainCont .seat.selected::after {
  background-color: rgb(168, 245, 168);
  border-color: rgba(0, 190, 0, 0.336);
}





/* ===== Seat layout invariants (desktop & mobile) ===== */
#seatCont{
  display: flex !important;
  flex-direction: column !important;   /* rows stacked top->bottom */
  align-items: center !important;
  gap: 10px !important;
}
#seatCont .row{
  display: flex !important;
  flex-direction: row !important;      /* seats left->right */
  flex-wrap: nowrap !important;        /* never wrap vertically */
  gap: 10px !important;
}
#seatCont .row .seat{
  flex: 0 0 auto !important;
}
/* Desktop media rules must NOT flip the direction */
@media (min-width: 768px){
  #seatCont{ flex-direction: column !important; }
  #seatCont .row{ flex-direction: row !important; flex-wrap: nowrap !important; }
}

/* Sensible responsive sizing so seats don't wrap on desktop */
#seatCont .row .seat{
  width: clamp(28px, 3.2vw, 38px);
  height: clamp(28px, 3.2vw, 38px);
}

/* Kill legacy grid-based column flow if present */
#seatCont{
  grid-auto-flow: row !important;
  grid-template-columns: none !important;
  grid-template-rows: none !important;
}
#seatCont .row{
  grid-auto-flow: column !important;
  grid-template-columns: none !important;
}
/* Desktop media rules must NOT flip the direction */
@media (min-width: 768px){
  #seatCont{ flex-direction: column !important; }
  #seatCont .row{ flex-direction: row !important; flex-wrap: nowrap !important; }
}

/* Sensible responsive sizing so seats don't wrap on desktop */
#seatCont .row .seat{
  width: clamp(28px, 3.2vw, 38px);
  height: clamp(28px, 3.2vw, 38px);
}


/* ===== Hall layout v2 (desktop & mobile) ===== */
/* Center the hall and cap its width so seats never stretch across the viewport */
.leftMainCont .mainSeatCont{
  max-width: 920px;
  margin: 0 auto;
  padding: 12px 8px;
}

/* Seat container = vertical stack of horizontal rows */
#seatCont{
  display: flex !important;
  flex-direction: column !important;
  align-items: center !important;
  gap: 12px !important;
  width: 100%;
}

/* Each row = seats left→right, kept together (no huge spacing) */
#seatCont .row{
  display: flex !important;
  flex-direction: row !important;
  justify-content: center !important;     /* kill space-between */
  align-items: center !important;
  flex-wrap: nowrap !important;
  gap: 10px !important;
  width: max-content;                      /* rows size to content, not full width */
}

/* Seats: fixed box size via a CSS var tuned per breakpoint */
#seatCont .row .seat{
  flex: 0 0 auto !important;
  width: var(--seat, 38px);
  height: var(--seat, 38px);
}

/* Responsive seat size */
@media (min-width: 1200px){ :root{ --seat: 42px; } }
@media (min-width: 768px) and (max-width: 1199px){ :root{ --seat: 38px; } }
@media (max-width: 767px){ :root{ --seat: 34px; } }

/* Row-band label on the LEFT; hide on small screens */
#seatCont .row::before{
  content: attr(data-band-label);
  width: 9ch;
  text-align: right;
  margin-right: 12px;
  color: rgba(255,255,255,.60);
  font-size: .9rem;
  letter-spacing: .2px;
}
@media (max-width: 600px){
  #seatCont .row::before{ display: none; }
}




.container .mainSeatCont {
  background-color: aliceblue;
  height: 100%;
  padding: 3rem 1rem;
  position: relative;
  min-width: 100%;
  overflow-x: auto;
  margin: 0% auto;
}

.container .mainSeatCont .seatCont {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  /* center rows relative to full seat area */
  margin: 0 auto;
  /* align with centered SCREEN header */
}

.container .mainSeatCont .seatCont .seatRowCont {
  display: flex;
  /* group of consecutive columns */
  flex-direction: row;
  /* desktop: columns side‑by‑side */
  align-items: flex-start;
}

/* Each logical column stacks seats vertically and centers them */
.container .mainSeatCont .seatCont .row {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container .mainSeatCont .seatCont .seatRowCont2 {
  margin: 0 1.5rem;
}

.container .leftMainCont .screen {
  height: 20px;
  width: 70%;
  background-color: #686868;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0 0 10px 10px;
  max-width: var(--stage-max);
  user-select: none;
  margin: 0 auto;
}

.container .leftMainCont .screen small {
  color: #bdbdbd;
  font-size: 12px;
  letter-spacing: 0.35rem;
}

/* ----------------------
   Mobile-first tweaks
   ---------------------- */
/* Base layout already stacks (no flex on .container by default).
   Below 800px we optimize spacing, tap targets, and wrapping. */

@media (max-width: 799px) {

  /* Overall rhythm */
  body {
    font-size: 16px;
  }

  .container .legendContainer ul {
    flex-wrap: wrap;
    gap: 0.5rem 1rem;
  }

  .container .leftMainCont .screen {
    width: 90%;
    max-width: none;
  }

  .container .mainSeatCont {
    padding: 1rem 0.5rem 0.75rem;
    /* trim bottom gap under seats */
    overflow-x: hidden;
    /* we’ll stack seat blocks instead of scrolling horizontally */
    height: auto;
    /* avoid forcing extra space */
  }

  .container .mainSeatCont .seatCont {
    flex-wrap: wrap;
    /* stack the seat blocks */
    gap: 0.75rem 0;
    /* vertical rhythm between blocks */
  }

  .container .mainSeatCont .seatCont .seatRowCont {
    width: 100%;
    /* make each block full width */
    justify-content: center;
    flex-direction: column;
    /* mobile: stack columns top-to-bottom */
    align-items: center;
    gap: 0.35rem;
  }

  /* On phones, each logical row should be a horizontal line of seats */
  .container .mainSeatCont .seatCont .row {
    flex-direction: row;
  }

  .container .mainSeatCont .seatCont .seatRowCont2 {
    margin: 0;
  }

  /* Seat hit area stays comfortable on touch */
  .container .leftMainCont .seat {
    margin: 10px;
    /* slightly tighter spacing */
    height: 38px;
    width: 44px;
  }

  .container .leftMainCont .seat::after {
    height: 30px;
    width: 28px;
  }

  /* Right/summary panel spacing */
  .container .confirmCont {
    padding: 1rem;
  }

  .container .confirmCont .rightBottomCont .selectedSeatCont .selectedSeatsHolder {
    grid-template-columns: repeat(auto-fit, minmax(84px, 1fr));
  }

  .container .confirmCont .rightBottomCont .selectedSeatCont .selectedSeat {
    min-width: 84px;
    max-width: 100%;
    padding: 0.45rem 1.4rem;
  }

  .container .confirmCont .rightBottomCont .buttonCont {
    gap: 0.75rem;
  }

  .container .confirmCont .rightBottomCont .buttonCont button {
    width: 100%;
    padding: 0.9rem 0.75rem;
  }
}

/* Compact phones */
@media (max-width: 380px) {
  .container .leftMainCont .seat {
    margin: 8px;
    height: 34px;
    width: 40px;
  }

  .container .leftMainCont .seat::before {
    font-size: 11px;
  }

  .container .leftMainCont .screen small {
    letter-spacing: 0.2rem;
  }

  .container .confirmCont .rightBottomCont .selectedSeatCont .selectedSeatsHolder {
    grid-template-columns: repeat(auto-fit, minmax(76px, 1fr));
  }

  .container .confirmCont .rightBottomCont .selectedSeatCont .selectedSeat {
    min-width: 76px;
    padding: 0.4rem 1.1rem;
  }
}

