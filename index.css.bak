/* ===================== Seat Icon v3 ===================== */
/* Theme tokens */
:root{
  --seat: 38px;
  --seat-bg: #ffffff;
  --seat-border: #e5e7eb;       /* slate-200 */
  --seat-label: #0f172a;        /* slate-900 */
  --seat-muted: #6b7280;        /* slate-500 */
  --seat-disabled: #f3f4f6;     /* slate-100 */
  --ring: #3b82f6;              /* blue-500 */
  --accent: #22c55e;            /* green-500 */
  --accent-600: #16a34a;
  --shadow-1: 0 1px 1px rgba(0,0,0,.05), 0 4px 14px rgba(0,0,0,.08);
  --shadow-2: 0 6px 18px rgba(34,197,94,.28);
}
[data-theme="dark"]{
  --seat-bg: #0b1220;           /* deep slate */
  --seat-border: rgba(255,255,255,.12);
  --seat-label: #e5e7eb;
  --seat-muted: #94a3b8;
  --seat-disabled: #0f172a;
  --ring: #93c5fd;              /* blue-300 */
}

/* Layout invariants (keep rows horizontal, centered) */
#seatCont{
  display:flex !important; flex-direction:column !important; align-items:center !important;
  gap:12px !important; width:100%;
  grid-auto-flow: row !important; grid-template-columns:none !important; grid-template-rows:none !important;
}
#seatCont .row{
  position:relative;
  display:flex !important; flex-direction:row !important; flex-wrap:nowrap !important;
  justify-content:center !important; align-items:center !important; gap:10px !important;
  width:max-content;
}

/* Move zone tint to the ROW (behind seats) so seats stay crisp */
#seatCont .row::after{
  content:""; position:absolute; z-index:0;
  left:-12px; right:-12px; top:calc(50% - (var(--seat)/2) - 6px);
  height:calc(var(--seat) + 12px); border-radius:14px;
  background: var(--row-tint, transparent);
}
#seatCont .row.zone-front    { --row-tint: rgba(59,130,246,.06); }
#seatCont .row.zone-standard { --row-tint: transparent; }
#seatCont .row.zone-premium  { --row-tint: rgba(255,215,0,.10); }
#seatCont .row.zone-recliner { --row-tint: rgba(255,99,71,.12); }

/* Kill any old seat overlays/pseudo-elements that caused the "overlap" look */
#seatCont .row .seat::before,
#seatCont .row .seat::after{ content:none !important; background:none !important; box-shadow:none !important; }

/* Seat: clean tile with micro-shadow */
#seatCont .row .seat{
  position:relative; z-index:1;
  display:grid; place-items:center;
  width:var(--seat); height:var(--seat);
  border-radius:12px;
  background: var(--seat-bg) !important;
  border:1px solid var(--seat-border) !important;
  box-shadow: var(--shadow-1) !important;
  color: var(--seat-label);
  font: 600 0.92rem/1.1 ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial, "Noto Sans";
  letter-spacing:.2px;
  transition: transform .12s ease, box-shadow .12s ease, border-color .12s ease, background .12s ease, color .12s ease;
  user-select:none;
}
#seatCont .row .seat:hover{ transform: translateY(-1px); border-color: var(--accent); }
#seatCont .row .seat:focus-visible{
  outline:3px solid var(--ring); outline-offset:2px;
}

/* Selected / Occupied */
#seatCont .row .seat.selected{
  background: var(--accent) !important; color:#fff !important;
  border-color: var(--accent-600) !important; box-shadow: var(--shadow-2) !important;
}
#seatCont .row .seat.occupied{
  background: var(--seat-disabled) !important; color: var(--seat-muted) !important;
  border-color: var(--seat-border) !important; cursor:not-allowed; filter: grayscale(.2) saturate(.7);
}

/* Make legend chips match the real seats */
.legendContainer .seat.legend{
  width:18px; height:18px; border-radius:6px;
  background: var(--seat-bg); border:1px solid var(--seat-border); box-shadow: var(--shadow-1);
}
.legendContainer .seat.legend.selected{ background: var(--accent); border-color: var(--accent-600); }
.legendContainer .seat.legend.occupied{ background: var(--seat-disabled); }
.legendContainer .seat.legend.recliner{ background: rgba(255,99,71,.22); border-color: rgba(255,99,71,.35); }

/* Keep rows compact on huge screens */
.leftMainCont .mainSeatCont{ max-width:920px; margin:0 auto; }
@media (min-width:1200px){ :root{ --seat:42px; } }
@media (max-width:767px){ :root{ --seat:34px; } }

