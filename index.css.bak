}
#seatCont .row .seat:hover{ transform: translateY(-1px); border-color: var(--accent); }
#seatCont .row .seat:active{ transform: translateY(0); }
#seatCont .row .seat:focus-visible{ outline:3px solid var(--ring); outline-offset:2px; }

#seatCont .row .seat.selected,
