/* De-emphasize duplicate big labels if they exist */
#movieName, #moviePrice { opacity:.65; font-weight:500; }

/* Overlays off by default; only show when .is-open is present */
.modal, .overlay, .backdrop { display: none; }
.modal.is-open, .overlay.is-open, .backdrop.is-open { display: flex; }
/* Seat grid must accept clicks */
#seatCont { pointer-events:auto; position:relative; z-index:1; }
/* Legends don’t eat clicks across the hall */
.legendContainer { pointer-events:none; }
.legendContainer * { pointer-events:auto; }

/* --- Hide explicit time UI; we infer "now" in JS --- */
